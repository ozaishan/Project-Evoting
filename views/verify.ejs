<!DOCTYPE html>
<html>
<head>
	<title>Signup</title>
	<link rel="shortcut icon" type="image/png" href="img/favicon.png">
	<link rel="stylesheet" type="text/css" href="css/signup.css">
	<link href="https://fonts.googleapis.com/css?family=Poppins:600&display=swap" rel="stylesheet">
	<script src="https://kit.fontawesome.com/a81368914c.js"></script>
	<meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>
	<nav>
		<ul>
			<li><a href="/">Home</a></li>
			<li><a href="aboutus">About Us</a></li>
			<li><a href="contactus">Contact Us</a></li>
			<li><a href="/">Go back</a></li>
		</ul>
	</nav>
	<div class="container">
		<div class="login-content">
			<form action="/verify" method="POST" onsubmit="return validateForm()">
				<h2 class="title">Verification</h2>
				
                <div class="input-div four">
					<div class="i">
						<i class="fas fa-user"></i>
					</div>
					<div class="div">
						<h5>National identity number</h5>
						<input type="text" name="nid" id="nationalId" class="input" required>
					</div>
				</div>

				<div class="input-div six">
					<div class="i">
						<i class="fas fa-user"></i>
					</div>
					<div class="div">
						<h5>Phone Number</h5>
						<input type="number" name="phone" id="phoneNumber" class="input" required>
					</div>
				</div>
				<input type="submit" class="btn" value="Verify">
			</form>
		</div>
	</div>

	<script type="text/javascript" src="js/signup.js"></script>
	<script>
		function validateForm() {
			var nationalId = document.getElementById("nationalId").value;
			var phoneNumber = document.getElementById("phoneNumber").value;
		var nationalIdRegex = /^[0-9]{10}$/; 
		var phoneNumberRegex = /^[0-9]{10}$/; 
		
		if (!nationalId.match(nationalIdRegex)) {
			alert("Please enter a valid National ID");
			return false;
		}
		
		if (!phoneNumber.match(phoneNumberRegex)) {
			alert("Please enter a valid Phone Number");
			return false;
		}
		return true;
	}
</script>
</body>
</html>